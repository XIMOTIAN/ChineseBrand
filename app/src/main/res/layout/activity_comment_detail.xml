<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:background="@color/color_F4F4F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/offset_16dp"
        android:layout_marginRight="@dimen/offset_16dp"
        android:layout_weight="1">

        <include layout="@layout/item_brand_comment_rv" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:background="@color/color_F4F4F4" />

    <TextView
        android:id="@+id/write_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/write_comment"
        android:drawablePadding="@dimen/offset_8dp"
        android:paddingBottom="@dimen/offset_12dp"
        android:paddingLeft="@dimen/offset_16dp"
        android:paddingTop="@dimen/offset_12dp"
        android:text="写评论..." />
</LinearLayout>

