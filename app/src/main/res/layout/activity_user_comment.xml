<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/offset_25dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/offset_15dp"
            android:paddingRight="@dimen/offset_15dp"
            android:src="@drawable/comment_back" />

        <ImageView
            android:id="@+id/title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <com.darren.chinesebrand.app.ui.HorizontalSelectorView
            android:id="@+id/selector_view"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/offset_80dp"
            android:layout_marginRight="@dimen/offset_80dp"
            app:borderCorner="@dimen/offset_25dp"
            app:borderWidth="@dimen/offset_2dp"
            app:solidColor="@color/color_E84040"
            app:textNormalColor="@color/color_E84040"
            app:textSelectColor="@color/color_FFFFFF"
            app:textSize="@dimen/font_size_14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:background="@color/color_F4F4F4" />

    <FrameLayout
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

