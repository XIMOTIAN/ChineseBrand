<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/delete_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/offset_16dp"
            android:src="@drawable/delete_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="分享"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_1dp"
        android:background="@color/color_F4F4F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/share_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wx_icon"
            android:gravity="center"
            android:padding="@dimen/offset_16dp"
            android:text="微信好友"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_12sp" />

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_qq_icon"
            android:gravity="center"
            android:padding="@dimen/offset_16dp"
            android:text="QQ好友"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_12sp" />

        <TextView
            android:id="@+id/share_wb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wb_icon"
            android:gravity="center"
            android:padding="@dimen/offset_16dp"
            android:text="新浪微博"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_12sp" />

    </LinearLayout>

</LinearLayout>