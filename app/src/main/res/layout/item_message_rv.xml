<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:text="111">

    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="时间"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_edit_corner"
        android:orientation="vertical"
        android:padding="@dimen/offset_16dp">

        <TextView
            android:id="@+id/message_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="message_title_tv"
            android:textColor="@color/color_E84040"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/message_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset_12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="message_content_tv"
            android:textColor="@color/color_333333"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>